<% if user_signed_in? %>

  <table class="table table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Twitter</th>
        <!--<th>User ID</th>-->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <td><%= link_to friend.first_name + " " + friend.last_name, friend %></td>
          <td><%= link_to friend.email, "mailto::" + friend.email, target: "_blank" %></td>
          <td><%= link_to friend.twitter, "https://www.twitter.com/" + friend.twitter, target: "_blank" %></td>
          <!--<td><%= friend.user_id %></td>-->
          <!--<td><%= link_to 'Edit', edit_friend_path(friend), class:"btn btn-outline-secondary btn-sm" %></td>-->
          <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-dark" %>

<% else %>
<h1>If you are here, it means you are a dear friend of mine. </h1>
<br/>
<p>This is my first app. I am starting to learn a basic CRUD.</p>
<p>This is a very simple thing where you can manage a list of your friends.</p>
<% end %>
